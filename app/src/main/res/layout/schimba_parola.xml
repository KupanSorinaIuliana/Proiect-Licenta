<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/dl">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/square"
            android:layout_alignParentTop="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:textColor="@color/white"
                    android:id="@+id/titlu"
                    android:text="@string/schimba"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:src="@drawable/ic_baseline_password_24"/>
            </RelativeLayout>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="150dp">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnOrderPreserved="true"
                    android:alignmentMode="alignMargins"
                    android:rowCount="5"
                    android:columnCount="1"
                    android:id="@+id/grid"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        android:id="@+id/descriere">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:id="@+id/lNume">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="5dp"
                                android:id="@+id/parolaInitiala"
                                android:textAlignment="center"
                                android:background="@drawable/border_name"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed-light"
                                android:textAllCaps="true"
                                android:inputType="textPassword"
                                android:textColorHint="@color/black"
                                android:hint="@string/txtParolaInitiala"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        android:layout_marginTop="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:id="@+id/lPrenume">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="5dp"
                                android:id="@+id/Parola"
                                android:textAlignment="center"
                                android:background="@drawable/border_name"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed-light"
                                android:textAllCaps="true"
                                android:inputType="textPassword"
                                android:textColorHint="@color/black"
                                android:hint="@string/txtParola"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        android:layout_marginTop="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:id="@+id/lUsername">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="5dp"
                                android:id="@+id/confirmaParola"
                                android:textAlignment="center"
                                android:background="@drawable/border_name"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed-light"
                                android:textAllCaps="true"
                                android:inputType="textPassword"
                                android:textColorHint="@color/black"
                                android:hint="@string/txtConfirma"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/grid"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/schimba">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-light"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:id="@+id/txtSchimba"
                            android:text="@string/txtSchimba"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/error"
                    android:layout_below="@+id/schimba"
                    android:layout_marginTop="60dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/red"
                    android:textAllCaps="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/grid"
                    android:layout_marginTop="400dp"/>
            </RelativeLayout>
        </ScrollView>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_navigation"
            android:background="?android:attr/windowBackground"
            android:layout_gravity="bottom"
            android:id="@+id/bottomNav"
            />

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>