<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/dl">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/square"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/white"
            android:id="@+id/titlu"
            android:text="@string/titlu"
            android:textAlignment="center"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/ic_baseline_compare_arrows_24"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        />


    <ListView
        android:id="@+id/lstCaroserii1"
        android:layout_width="180dp"
        android:layout_height="300dp"
        android:layout_marginTop="130dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/border_right"
        />

    <ListView
        android:id="@+id/lstCaroserii2"
        android:layout_width="180dp"
        android:layout_height="300dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/border_left"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnOrderPreserved="true"
        android:alignmentMode="alignMargins"
        android:rowCount="5"
        android:columnCount="1"
        android:id="@+id/grid"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            android:id="@+id/cvCaroserii"
            app:cardCornerRadius="55dp"
            android:layout_margin="12dp"
            android:layout_marginTop="450dp">
            <LinearLayout
                android:id="@+id/relLayout1"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/caroserieTxt1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_toStartOf="@+id/vs"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:textAllCaps="true"
                    android:text="@string/primaCaroserie"
                    />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="30dp"
                        android:id="@+id/image1"
                        android:layout_marginBottom="10dp"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/ic_baseline_flash_on_24"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/caroserieTxt2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:textAllCaps="true"
                    android:layout_marginStart="30dp"
                    android:text="@string/adouaCaroserie"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="30dp"
                    android:id="@+id/image2"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </GridLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/grid"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border"
        android:id="@+id/relCompara">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:textSize="15dp"
        android:text="@string/compara"
        android:id="@+id/compara"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="700dp"/>
</RelativeLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"
        android:background="?android:attr/windowBackground"
        android:layout_gravity="bottom"
        android:id="@+id/bottomNav"
        />
</RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"/>
</androidx.drawerlayout.widget.DrawerLayout>